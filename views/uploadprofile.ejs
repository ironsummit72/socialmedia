<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProfilePicture and coverphoto</title>
    <link rel="stylesheet" href="/stylesheets/uploadprofile.css">
</head>
<body>
  <form action="/upload/dp" method="post" enctype="multipart/form-data" class="image-upload-form">
    <div class="image-preview-container">
      <img src="" alt="Image preview" class="preview-image">
    </div>
    <div class="file-upload">
      <label for="avatar" class="file-upload-label">
        <i class="fas fa-cloud-upload-alt"></i>
        Choose image
      </label>
      <input type="file" accept="image/*" name="avatar" id="avatar" class="file-upload-input" onchange="showImage()">
    </div>
    <button type="submit" class="upload-button">Upload</button>
  </form>
      
</body>
<script>
    const imageUploader = document.querySelector("input");
const imagePreview = document.querySelector("img");

function showImage() {
  let reader = new FileReader();
 reader.readAsDataURL(imageUploader.files[0]);
  reader.onload = function(e) {
    imagePreview.classList.add("show");
    imagePreview.src = e.target.result;
  };
}

</script>
</html>